<?xml version="1.0"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
         xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <groupId>com.vcg</groupId>
    <artifactId>mybatis-processor</artifactId>
    <name>mybatis-example-processor</name>
    <packaging>pom</packaging>
    <version>2.0.0-SNAPSHOT</version>

    <url>http://maven.apache.org</url>
    <modelVersion>4.0.0</modelVersion>

    <modules>
        <module>mybatis-processor-core</module>
        <module>mybatis-processor-starter</module>
    </modules>

    <properties>
        <java.version>1.8</java.version>
    </properties>

    <build>
        <extensions>
            <extension>
                <groupId>io.packagecloud.maven.wagon</groupId>
                <artifactId>maven-packagecloud-wagon</artifactId>
                <version>0.0.6</version>
            </extension>
        </extensions>
    </build>

    <repositories>
        <repository>
            <id>packagecloud</id>
            <url>https://packagecloud.io/priv/${env.PACKAGECLOUD_TOKEN}/500px/microservice/maven2</url>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
            <releases>
                <enabled>true</enabled>
            </releases>
        </repository>
    </repositories>

    <distributionManagement>
        <repository>
            <id>packagecloud-500px</id>
            <url>packagecloud+https://packagecloud.io/500px/microservice</url>
        </repository>
        <snapshotRepository>
            <id>packagecloud-500px</id>
            <url>packagecloud+https://packagecloud.io/500px/microservice</url>
        </snapshotRepository>
    </distributionManagement>


</project>
